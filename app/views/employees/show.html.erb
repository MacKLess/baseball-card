<p id="notice"><%= notice %></p>
<div class="container">
  <% if current_user.id == @employee.user_id %>
 <center><%= link_to 'Edit', edit_employee_path(@employee) %> | <% end %>

  <%= link_to 'Back', employees_path %> | <a href="/employees/<%= @id %>/flip">Flip</a>
 </center><br>
  <div class="row">
    <div class="col-md-6">
      <div class="float-right">
        <h1 class="blue-text" id="name"><%= @employee.name %></h1>
        <h2><%= @employee.position %></h2>
        <h2><%= @employee.start_date %></h2>
        <h2 class="grey-text">Last updated: <%= time_ago_in_words @employee.updated_at %> ago</h2>
      </div>

      <div class="float-left">
        <h7>ABOUT</h7>
        <h5>Artemis Role:</h5>
        <p><%= @employee.expectation %></p>

        <h5>Life quote:</h5>
        <p><%= @employee.life_quote %></p>

        <h5>Quote:</h5>
        <p><%= @employee.quote %></p>

        <h5>Motto:</h5>
        <p><%= @employee.motto %></p>

        <h5>Industry Experience:</h5>
        <p><%= @employee.industry_experience %></p>

        <h7>MISSION & VISION</h7>

        <h5>Mission:</h5>
        <p><%= @employee.mission %></p>

        <h5>Vision:</h5>
        <p><%= @employee.vision %></p>

        <h5>Location:</h5>
        <p><%= @employee.city %>, <%= @employee.state %>, <%= @employee.country %></p>

        <h5>Willing to Travel:</h5>
        <p><%= @employee.willing_to_travel %></p>

        <h5>Project Roles:</h5>
        <% if @employee.project_roles %>
          <% @employee.project_roles.each do |role| %>
            <%= role %>
          <% end %>
        <% end %>

      </div>

    </div>
    <div class="col-md-6" id="right-side">
      <div id="right-side-text">

        <h7>STRENGTHS</h7>

        <h5>Myers Briggs:</h5>
        <p><%= @employee.myers_briggs %></p>

        <h5>StrengthsFinder Top 5:</h5>
        <p><%= @employee.strength %></p>

        <h5>Birkman:</h5>
        <p><%= @employee.birkman %></p>

        <h7>CAREER GOALS & ASPIRATIONS</h7>

        <h5>You at Artemis:</h5>
        <p><%= @employee.expectation %> </p>

        <h5>Short term goal:</h5>
        <p><%= @employee.short_term_goal %></p>

        <h5>Long term goal:</h5>
        <p><%= @employee.long_term_goal %></p>

        <h5>Awesome attributes:</h5>
        <p><%= @employee.awesome %></p>

        <h5>Needs from others:</h5>
        <p><%= @employee.need %></p>

        <h5>Preferred feedback:</h5>
        <p><%= @employee.receive_feedback %></p>

        <h5>Personal growth:</h5>
        <p><%= @employee.development %></p>

        <h7>AREAS I WANT TO DEVELOP</h7>

        <h5>Skills:</h5>
        <% if @employee.bbcard_skills %>
          <% @employee.bbcard_skills.each do |skill| %>
            <p> <%= skill %> </p>
          <% end %>
        <% end %>

        <h5>Areas to develop:</h5>
        <% if @employee.areas_to_develop %>
          <% @employee.areas_to_develop.each do |area| %>
            <p> <%= area %> </p>
          <% end %>
        <% end %>

        <h7>OBJECTIVE SETTING:</h7>
        <p><%= @employee.objective_setting %></p>

        <h7>PERSONAL GOALS:</h7>
        <p><%=  @employee.personal_goal %>, <%= @employee.personal_goal_two %>, and <%= @employee.personal_goal_three %></p>

        <h5>Projects:</h5>
        <% if @employee.projects.any? %>
          <ul>
            <% @employee.projects.each do |project| %>
              <li class="project-link-on-card"> <%= link_to project.title, project_path(project) %> </li>
            <% end %>
          </ul>
        <% else %>
          <p>No projects</p>
        <% end %>

      </div>
    </div>
  </div>
</div>
