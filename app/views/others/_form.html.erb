<%= form_for [@employee, @other] do |f| %>
  <div class="container" id="other-container">
    <div class="field form-group">
      <%= f.label :occasion %>
      <%= f.text_field :occasion, id: :other_occasion, placeholder: "Lorem ipsum dolor sit amet", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :end_project %>
      <%= f.text_field :end_project, id: :other_end_project, placeholder: "Duis aute irure",  class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :birthday %>
      <%= f.text_field :birthday, id: :other_birthday, placeholder: "Ut enim ad minim veniam",  class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :pulse_survey %>
      <%= f.text_area :pulse_survey, id: :other_pulse_survey, placeholder: "Excepteur sint occaecat cupidatat non proident",  class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit class: 'btn btn-secondary' %>
    </div>
  <end>
<% end %>
